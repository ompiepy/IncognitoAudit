{
  "name": "zk-compliance-auditor",
  "version": "1.0.0",
  "description": "Zero-Knowledge Compliance Auditor using Midnight Protocol",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../dashboard && npm install && cd ../mock-data && npm install && cd ../contracts && npm install",
    "build": "node scripts/build-all.js",
    "build:contracts": "cd contracts && npm run build",
    "build:client": "cd client && npm run build", 
    "build:dashboard": "cd dashboard && npm run build",
    "build:mock-data": "cd mock-data && npm run build",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:dashboard\"",
    "dev:client": "cd client && npm run dev",
    "dev:dashboard": "cd dashboard && npm run dev",
    "demo": "MIDNIGHT_USE_OFFICIAL_SDK=true node scripts/demo-flow.js",
    "demo:production": "NODE_ENV=production MIDNIGHT_USE_OFFICIAL_SDK=true node scripts/demo-flow.js",
    "setup:midnight": "node scripts/setup-midnight-account.js",
    "quick-demo": "node scripts/quick-demo.js",
    "setup": "npm run install-all && npm run build",
    "setup:production": "npm run install-all && npm run build && npm run deploy:testnet",
    "deploy:testnet": "cd contracts && npm run deploy:testnet",
    "deploy:mainnet": "cd contracts && npm run deploy:mainnet",
    "test": "npm run test:contracts && npm run test:client",
    "test:contracts": "cd contracts && npm test",
    "test:client": "cd client && npm test",
    "test:production": "NODE_ENV=production npm test",
    "test:midnight": "tsx scripts/test-midnight.ts",
    "test:midnight:testnet": "tsx scripts/test-midnight.ts --environment testnet --verbose",
    "test:midnight:mainnet": "tsx scripts/test-midnight.ts --environment mainnet --verbose",
    "test:midnight:official": "tsx scripts/test-midnight.ts --official-sdk --verbose",
    "test:all": "npm run test && npm run test:midnight",
    "start": "npm run dev",
    "start:production": "NODE_ENV=production npm run dev"
  },
  "keywords": [
    "zero-knowledge",
    "compliance",
    "midnight-protocol",
    "blockchain",
    "privacy",
    "zk-proofs"
  ],
  "author": "zk-Compliance Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}